<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    <!--  -->
 	<style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
<!--         ActionBar 背景, 绿色#40AA53 -->
        <item name="background">@color/actionbar_background</item>
<!--         ActionBar 标题文字样式, 白色 -->
        <item name="titleTextStyle">@style/TitleStyle</item>
<!--         ActionBar 图标, 透明 -->
        <item name="icon">@android:color/transparent</item>
<!--         ActionBar 副标题样式, 白色 -->
        <item name="subtitleTextStyle">@style/SubTitle</item>
        <!-- 设置该属性解决两端空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="ActionBarBaseTheme" parent="@style/Theme.AppCompat.Light">
<!-- 	     设置应用程序背景色#EBEBEB 灰色 -->
        <item name="android:windowBackground">@color/window_background</item>
<!--         设置ActionBar样式 -->
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <item name="actionBarSize">48dp</item>
<!--         弹出菜单的样式 -->
        <!--<item name="android:popupMenuStyle">@style/ListPopupWindow</item>-->
<!--         更多菜单的按钮样式 , 针对没有菜单按键的设备-->
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
<!--         ActionBar条目背景选择器 -->
        <item name="actionBarItemBackground">@drawable/socialize_titlebar_item_background_selector</item>
<!--         ActionBar条目菜单文本颜色-->
        <item name="actionMenuTextColor">@color/white</item>
<!--         弹出菜单ListView的样式 -->
        <item name="dropDownListViewStyle">@style/SpinnerDropDownListView</item>
        <item name="popupMenuStyle">@style/mylistPopupWindowStyle</item>
    </style>
    
    <style name="DialogBaseTheme" parent="@style/Theme.AppCompat.DialogWhenLarge">
    </style>
    

    <style name="ActionBarBaseTheme.Preview" parent="@style/ActionBarBaseTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/ActionBarBaseStyle.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


</resources>